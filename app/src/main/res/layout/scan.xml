<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="false"
              android:orientation="vertical"
              android:fitsSystemWindows="true" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

        <ImageView
                android:src="@mipmap/back"
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:gravity="left"
                android:id="@+id/inventory_back"/>

        <TextView
                android:text="@string/inventory_scan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:id="@+id/inventory_scan"
                android:textSize="18sp"/>

    </LinearLayout>
    <View
           android:layout_height="1px"
           android:layout_width="match_parent"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:background="@color/blue3"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/card_shape">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
            <TextView
                    android:text="AAAA"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/code_num"
                    android:textColor="@color/blue"/>
            <TextView
                    android:text="AAAA"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/count_num"
                    android:textColor="@color/blue"/>
            <TextView
                    android:text="AAA"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/matched_num"
                    android:textColor="@color/blue"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/code"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/code"/>
            <TextView
                    android:text="@string/count"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/count"/>
            <TextView
                    android:text="@string/matched"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/matched"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">
        <ListView
                android:id="@+id/list_item"
                android:scrollbars="vertical"
                android:fadingEdge="vertical"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"
                android:layout_height="355dp"/>
        <TextView
                android:id="@+id/no_data"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/msg_no_data"
                android:visibility="invisible"
                android:gravity="center"
                android:textSize="14sp"
                android:ems="18"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">
            <Button
                android:id="@+id/scan"
                android:text="@string/scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="left"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/upload"
                android:text="@string/upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="left"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
