<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_shape"
        tools:context=".view.Register">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/receipts_code"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="编号："/>

        <TextView
                android:id="@+id/receipts_code_value"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="left"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="7dp"
            android:background="#E0E0E0"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/receipts_matched"
                android:layout_width="10dp"
                android:layout_height="24dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="已匹配："/>

        <TextView
                android:id="@+id/receipts_matched_value"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="left"/>

        <TextView
                android:id="@+id/receipts_count"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="总数量：" />
        <TextView
                android:id="@+id/receipts_count_value"
                android:layout_width="10dp"
                android:layout_height="23dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="left" />

    </LinearLayout>

</LinearLayout>
