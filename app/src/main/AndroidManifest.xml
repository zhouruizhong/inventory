<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zrz.inventory">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/log"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/log"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".view.Index">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.Login"/>
        <activity android:name=".view.Register"/>
        <activity android:name=".view.ScanReceipts"/>
        <activity android:name=".view.Inventory"/>
        <activity android:name=".view.Main"/>
        <activity android:name=".view.Scan"/>
        <activity android:name=".view.Clean"/>
        <activity
                android:name=".view.Invalid"
                android:label="@string/title_activity_invalid">
        </activity>
    </application>

</manifest>