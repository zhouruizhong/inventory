<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/index_bg"
        tools:context=".view.Main">

    <ImageView
            android:id="@+id/inventory"
            android:layout_width="147dp"
            android:layout_height="116dp"
            app:srcCompat="@mipmap/inventory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.841"
            app:layout_constraintHorizontal_bias="0.156"
    />

    <ImageView
            android:id="@+id/clean_cache"
            android:layout_width="135dp"
            android:layout_height="111dp"
            app:srcCompat="@mipmap/clean_cache"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.835"
            app:layout_constraintHorizontal_bias="0.935"

    />

    <TextView
            android:layout_width="41dp"
            android:layout_height="25dp"
            android:inputType="textPersonName"
            android:text="@string/inventory"
            android:ems="10"
            android:id="@+id/inventory_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.952"
            app:layout_constraintHorizontal_bias="0.261"
            android:textSize="18sp" android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/clean_cache_icon"
            android:text="@string/clean_cache"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.957"
            app:layout_constraintHorizontal_bias="0.854"
            android:textSize="18sp" android:textColor="@android:color/white"/>

</android.support.constraint.ConstraintLayout>